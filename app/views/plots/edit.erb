<h1>Edit plot: <%=@plot.title %></h1>
<h3>Fill out all text fields</h3>
<form method='post' action='/plots/<%= @plot.id %>'>
    <input type='hidden' name='_method' value='patch' >
    <p>Title:</p>
    <textarea rows="1" cols="60" name="title"><%= @plot.title %></textarea> 
    <p>Setting:</p>
    <textarea rows="3" cols="60" name="setting"><%= @plot.setting %></textarea> 
    <p>Hero:</p>
    <textarea rows="3" cols="60" name="hero"><%= @plot.hero %></textarea> 
    <p>Enemy:</p>
    <textarea rows="3" cols="60" name="enemy"><%= @plot.enemy %></textarea> 
    <p>Conflict:</p>
    <textarea rows="3" cols="60" name="conflict"><%= @plot.conflict %></textarea> 
    <p>Climax:</p>
    <textarea rows="3" cols="60" name="climax"><%= @plot.climax %></textarea><br>
    <p>Resolution:</p>
    <textarea rows="3" cols="60" name="resolution"><%= @plot.resolution %></textarea><br>
    <input type='submit' value='Submit'>
</form>

<a href="/plots/<%= @plot.id %>">Cancel Edit</a>

